<div class="my-5 container" data-controller="devices">
  <h1>Devices</h1>

  <div class="row mb-3">
    <div class="col-sm-3">
      <h5>Filter by OS Version</h5>
    </div>
    <div class="col-sm-6">
      <input
        type="text"
        id="os_version_range"
        placeholder='Enter version range e.g. (5.4.0 - 10.0.1)'
        data-target="devices.content"
        class='mb-3 form-control'
      />
    </div>
    <div class="col-sm-3">
      <button class='btn btn-outline-secondary find_matching_devices' data-action="click->devices#find_devices_count">
        Find Devices Count
      </button>
    </div>
  </div>

  <table class='table table-striped'>
    <thead class='table-dark'>
      <tr>
        <th>Model Name</th>
        <th>Operating System</th>
        <th>OS Version</th>
        <th>Locale</th>
        <th>Player First Name</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'device', collection: @resources, as: :device %>
    </tbody>
  </table>

  <%= paginate @resources %>

  <%= link_to 'Add New Device', new_device_path, class: 'mt-2 btn btn-outline-secondary' %>
  <%= link_to 'Back', :back, class: 'mt-2 btn btn-outline-secondary' %>
</div>

<%= render 'shared/modal'%>
