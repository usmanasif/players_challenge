<div class='mt-5 container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-6'>
      <h3>Offer Target</h3>
      <div class='mb-3'>
        <span class='font-weight-bold'>Minimum Age: </span>
        <%= @resource.minimum_age %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Maximum Age: </span>
        <%= @resource.maximum_age %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>gender: </span>
        <%= @resource.gender %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Operating System: </span>
        <%= @resource.operating_system %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Minimum OS Version: </span>
        <%= @resource.minimum_os_version %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Locale: </span>
        <%= @resource.locale %>
      </div>

      <%= link_to 'Edit', edit_offer_target_path(@resource), class:'mt-2 btn btn-outline-secondary' %>
      <%= link_to 'Back', :back, class: 'mt-2 btn btn-outline-secondary' %>
      <%= link_to 'Go to Offer Targets', offer_targets_path, class: 'mt-2 btn btn-outline-secondary' %>
    </div>
  </div>
</div>
