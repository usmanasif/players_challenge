<div class='my-5 container'>
  <h1>Offer Targets</h1>
  <table class='table table-striped'>
    <thead class='table-dark'>
      <tr>
        <th>Minimum Age</th>
        <th>Maximum Age</th>
        <th>Gender</th>
        <th>Operating System</th>
        <th>Minimum OS Version</th>
        <th>Locale</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'offer_target', collection: @resources, as: :offer_target %>
    </tbody>
  </table>

  <%= paginate @resources %>

  <%= link_to 'Add New offer_target', new_offer_target_path, class: 'mt-2 btn btn-outline-secondary' %>
  <%= link_to 'Back', :back, class: 'mt-2 btn btn-outline-secondary' %>
</div>
