<div class='mt-5 container'>
  <h1>Devices</h1>

  <div class="row mb-3">
    <div class="col-sm-3">
      <h5>Filter by OS Version</h5>
    </div>
    <div class="col-sm-6">
      <input type="text" id="os_version_range" placeholder='Enter version range e.g. (5.4.0 - 10.0.1)' class='mb-3 form-control' />
    </div>
    <div class="col-sm-3">
      <input type='submit' id='enter' value='Find Devices Count' class='btn btn-outline-secondary find_matching_devices' />
    </div>
  </div>

  <table class='table table-striped'>
    <thead class='table-dark'>
      <tr>
        <th>Model Name</th>
        <th>Operating System</th>
        <th>OS Version</th>
        <th>Locale</th>
        <th>Player First Name</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody>
      <% @resources.each do |device| %>
        <tr class='align-middle'>
          <td><%= device.modelname %></td>
          <td><%= device.operating_system %></td>
          <td><%= device.os_version %></td>
          <td><%= device.locale %></td>
          <td><%= device.player.first_name %></td>
          <td><%= link_to 'Show', device, class: 'mt-2 btn btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_device_path(device), class: 'mt-2 btn btn-outline-primary' %></td>
          <td><%= button_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mt-2 btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Add New Device', new_device_path, class: 'mt-2 btn btn-outline-secondary' %>
  <%= link_to 'Back', :back, class: 'mt-2 btn btn-outline-secondary' %>
</div>

<%= render 'modal'%>
