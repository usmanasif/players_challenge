<div class='mt-5 container'>
  <div class="row">
    <div class="col-md-4 col-md-offset-6">
      <h3>Player</h3>
      <div class='mb-3'>
        <span class='font-weight-bold'>First Name: </span>
        <%= @resource.first_name %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Last Name: </span>
        <%= @resource.last_name %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Date of Birth: </span>
        <%= @resource.birthdate %>
      </div>
      <div class='mb-3'>
        <span class='font-weight-bold'>Gender: </span>
        <%= @resource.gender %>
      </div>

      <%= link_to 'Edit', edit_player_path(@resource), class:'mt-2 btn btn-outline-secondary' %>
      <%= link_to 'Back', :back, class: 'mt-2 btn btn-outline-secondary' %>
  <%= link_to 'Go to Players', players_path, class: 'mt-2 btn btn-outline-secondary' %>
    </div>
  </div>
</div>
