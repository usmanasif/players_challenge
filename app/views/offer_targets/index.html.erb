<div class='mt-5 container'>
  <h1>Offer Targets</h1>
  <table class='table table-striped'>
    <thead class='table-dark'>
      <tr>
        <th>Minimum Age</th>
        <th>Maximum Age</th>
        <th>Gender</th>
        <th>Operating System</th>
        <th>Minimum OS Version</th>
        <th>Locale</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody>
      <% @resources.each do |offer_target| %>
        <tr class='align-middle'>
          <td><%= offer_target.minimum_age %></td>
          <td><%= offer_target.maximum_age %></td>
          <td><%= offer_target.gender %></td>
          <td><%= offer_target.operating_system %></td>
          <td><%= offer_target.minimum_os_version %></td>
          <td><%= offer_target.locale %></td>
          <td><%= link_to 'Show', offer_target, class: 'mt-2 btn btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_offer_target_path(offer_target), class: 'mt-2 btn btn-outline-primary' %></td>
          <td><%= button_to 'Destroy', offer_target, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mt-2 btn btn-outline-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Add New offer_target', new_offer_target_path, class: 'mt-2 btn btn-outline-secondary' %>
  <%= link_to 'Back', :back, class: 'mt-2 btn btn-outline-secondary' %>
</div>
